<style>
  .navbar-brand-rajspace {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    color: #0f766e;
    font-weight: 800;
    font-size: 1.5rem;
    letter-spacing: 0.05em;
  }
  .navbar-brand-rajspace:hover {
    color: #0d9488;
  }
  .navbar-brand-rajspace .brand-icon {
    color: #0d9488;
    font-size: 1.6rem;
  }
  .search-btn {
    background-color: #0d9488;
    color: #ffffff;
    border-radius: 25px;
    padding: 0.5rem 1.2rem;
    display: flex;
    border: none;
  }
  .search-btn:hover {
    background-color: #0f766e;
    color: #ffffff;
  }
  .search-btn i {
    display: inline;
    margin-right: 0.5rem;
  }
  .search-inp {
    border-radius: 25px;
    padding: 0.5rem 1rem;
    min-width: 0;
    flex: 1;
  }
  @media (min-width: 768px) {
    .search-inp {
      width: 280px;
      max-width: 420px;
    }
  }
  @media (min-width: 992px) {
    .search-inp {
      width: 340px;
    }
  }
</style>

<nav class="navbar navbar-expand-md navbar-mobile-solid bg-white border-bottom sticky-top">
  <div class="container-fluid px-3 px-md-4">
    <a class="navbar-brand d-flex align-items-center gap-2" href="/listings">
      <i class="fa-regular fa-compass brand-icon"></i>
      <span class="navbar-brand-rajspace">RAJSPACE</span>
    </a>
    <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav pt-2 pt-md-0">
        <a class="nav-link py-2 py-md-0" href="/listings">Explore</a>
        <a class="nav-link py-2 py-md-0" href="/wishlist">Wishlist</a>
      </div>

      <form class="d-flex my-3 my-md-0 ms-md-auto me-md-2 flex-grow-1 flex-md-grow-0" action="/listings" method="GET">
        <input class="form-control me-2 search-inp" type="search" name="q"
          placeholder="Search destinations, cities, or stays" value="<%= typeof q !== 'undefined' ? q : '' %>" aria-label="Search">
        <button class="btn search-btn d-flex align-items-center justify-content-center gap-1 flex-shrink-0" type="submit">
          <i class="fa-solid fa-magnifying-glass"></i>
          <span class="d-none d-md-inline">Search</span>
        </button>
      </form>

      <div class="d-flex align-items-center gap-2 navbar-auth-section ms-auto ms-md-0 pt-2 pt-md-0 border-top mt-2 mt-md-0 pt-3 pt-md-0">
        <button type="button" class="theme-toggle" id="theme-toggle" aria-label="Toggle light/dark mode" title="Toggle theme">
          <i class="fa-solid fa-sun icon-sun" aria-hidden="true"></i>
          <i class="fa-solid fa-moon icon-moon" aria-hidden="true"></i>
        </button>
        <a class="nav-link py-2 py-md-0" href="/listings/new">List your space</a>
        <% if(!currUser) { %>
          <a class="nav-link active py-2 py-md-0" href="/signup"><b>Sign Up</b></a>
          <a class="nav-link py-2 py-md-0" href="/login"><b>Login</b></a>
        <% } %>
        <% if(currUser) { %>
          <a class="nav-link py-2 py-md-0" href="/logout"><b>Logout</b></a>
        <% } %>
      </div>
    </div>
  </div>
</nav>